{
  "name": "longbridge-option-quant",
  "version": "1.1.0",
  "description": "基于 LongPort OpenAPI 的期权量化交易系统（TypeScript）",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "tsc && node dist/src/index.js",
    "dev": "cross-env RUN_MODE=dev npm run build && cross-env RUN_MODE=dev npm run dev:watch",
    "dev:watch": "concurrently -k -r \"tsc --watch\" \"node --watch dist/src/index.js\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "find-warrant": "tsc && node dist/tools/findWarrant.js",
    "analyze-indicators": "tsc && node dist/tools/indicatorAnalysis.js",
    "monitor-daily": "tsc && node dist/tools/dailyKlineMonitor.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sonarqube": "node scripts/run-sonar.js",
    "sonarqube:report": "node scripts/get-report.js",
    "perf:test": "tsc && cross-env PERF_TEST_DURATION_MS=60000 clinic doctor --dest ./clinic-report -- node dist/src/index.js",
    "perf:test:custom": "tsc && clinic doctor --dest ./clinic-report -- node dist/src/index.js",
    "perf:bubbleprof": "tsc && npx clinic bubbleprof --dest ./clinic-report -- node dist/src/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "dotenv": "^16.4.0",
    "longport": "^3.0.0",
    "pino": "^10.1.0",
    "pino-abstract-transport": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "clinic": "^13.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
