{
  "name": "longbridge-option-quant",
  "version": "16.8.0",
  "description": "基于 LongPort OpenAPI 的港股双向量化交易系统（TypeScript）",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "bun src/index.ts",
    "dev": "cross-env RUN_MODE=dev bun run start",
    "dev:watch": "concurrently -k -r \"tsc --watch\" \"bun --watch dist/src/index.js\"",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rimraf dist",
    "analyze-indicators": "bun tools/indicatorAnalysis.ts",
    "monitor-daily": "bun tools/dailyKlineMonitor.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sonarqube": "bun scripts/run-sonar.js",
    "sonarqube:report": "bun scripts/get-report.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "dotenv": "^16.4.0",
    "longport": "^3.0.0",
    "pino": "^10.1.0",
    "pino-abstract-transport": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.9",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
