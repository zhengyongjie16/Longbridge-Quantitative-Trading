{
  "name": "longbridge-option-quant",
  "version": "1.1.0",
  "description": "基于 LongPort OpenAPI 的期权量化交易系统（TypeScript）",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/src/index.js",
    "dev": "tsc && node dist/src/index.js",
    "dev:watch": "tsc --watch & node --watch dist/src/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "find-warrant": "node dist/tools/findWarrant.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sonarqube": "node scripts/run-sonar.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "dotenv": "^16.4.0",
    "longport": "^3.0.0",
    "pino": "^10.1.0",
    "pino-abstract-transport": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
