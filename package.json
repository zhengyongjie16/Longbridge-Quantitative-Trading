{
  "name": "longbridge-option-quant",
  "version": "16.8.0",
  "description": "基于 LongPort OpenAPI 的港股双向量化交易系统（TypeScript）",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "bun src/index.ts",
    "dev": "cross-env RUN_MODE=dev bun run start",
    "dev:watch": "concurrently -k -r \"tsc --watch\" \"bun --watch dist/src/index.js\"",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "sonarqube": "bun scripts/run-sonar.js",
    "sonarqube:report": "bun scripts/get-report.js",
    "sonarqube:duplications": "bun scripts/get-duplications.js"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "longport": "^3.0.22",
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/bun": "^1.3.9",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^4.0.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "prettier": "^3.8.1",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
